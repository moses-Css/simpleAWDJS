<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= page.title %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <script src="/device-override.js" defer></script>
  <style>
    body{font-family:system-ui,Segoe UI,Roboto,Arial;max-width:900px;margin:40px auto;padding:0 16px}
    header{margin-bottom:18px}
    .device-pill{display:inline-block;padding:6px 10px;border-radius:999px;border:1px solid #ddd;margin-left:8px;font-size:0.9rem}
  </style>
</head>
<body>
  <header>
    <h1><%= page.headline %> <span class="device-pill"><%= device %></span></h1>
    <p><%= page.sub %></p>
  </header>

  <section>
    <h3>Highlights</h3>
    <ul>
      <% page.bullets.forEach(function(b){ %>
        <li><%= b %></li>
      <% }) %>
    </ul>
  </section>

  <hr>

  <section>
    <h4>Debug</h4>
    <p>User-Agent: <small><%= ua %></small></p>
  </section>
</body>
</html>
